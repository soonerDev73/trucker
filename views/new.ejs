<%- include("partials/header") %>
<div class="container">
    <div class="row">
        <h1>Create a new truck</h1>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/trucks" method="POST" autocomplete="off">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image">

                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="foodtype" placeholder="food type">

                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>

                </div>
            </form>
        </div>

        <a href="/trucks">Go Back</a>
    </div>
</div>
<%- include("partials/footer") %>